<aura:component
    implements="flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId"
    access="global"
>
    <aura:attribute name="recordId" type="Id" />
    <aura:attribute name="accountId" type="Id" />
    <aura:attribute name="record" type="Object" />
    <aura:attribute name="account" type="Object" />
    <aura:attribute
        name="steps"
        type="String[]"
        default="['Draft', 'Submitted to Distributors', 'Ordered by Distributor', 'Shipped']"
    />
    <aura:attribute name="pathName" type="String" access="global" />
    <aura:attribute
        name="channel"
        type="String"
        default="/topic/BundleStatusChange"
    />

    <force:recordData
        aura:id="bundleRecord"
        recordId="{!v.recordId}"
        targetFields="{!v.record}"
        fields="['Id', 'Status__c', 'Account__c', 'Date_Ordered__c']"
        mode="EDIT"
        recordUpdated="{!c.onRecordUpdated}"
    />

    <force:recordData
        aura:id="accountService"
        recordId="{!v.record.Account__c}"
        targetFields="{!v.account}"
        fields="['Id', 'Name']"
    />

    <lightning:empApi aura:id="empApi" />

    <aura:handler name="init" value="{!this}" action="{!c.subscribe}" />

    <div class="slds-card">
        <c:path
            steps="{!v.steps}"
            currentStep="{!v.record.Status__c}"
            onstepchange="{!c.onStepChange}"
        />

        <aura:if
            isTrue="{! equals(v.record.Status__c, 'Ordered by Distributor') &amp;&amp; v.account}"
        >
            <lightning:layout class="slds-p-top_small">
                <lightning:layoutItem flexibility="grow" padding="around-small"
                    >Ordered by: <a>{!v.account.Name}</a></lightning:layoutItem
                >
                <lightning:layoutItem flexibility="grow" padding="around-small"
                    >Order Date:
                    {!v.record.Date_Ordered__c}</lightning:layoutItem
                >
            </lightning:layout>
        </aura:if>
    </div>
</aura:component>
